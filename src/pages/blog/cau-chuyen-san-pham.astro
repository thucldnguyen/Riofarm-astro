  image: 'https://riofarm.vn/blogs/macca-story01.jpg',
  author: {
    '@type': 'Organization',
    name: 'Rio Farm',
  },
  publisher: {
    '@type': 'Organization',
    name: 'Rio Farm',
    logo: {
      '@type': 'ImageObject',
      url: 'https://riofarm.vn/products/logo.jpg',
    },
  },
  datePublished: '2023-07-01',
  description: 'Khám phá câu chuyện đằng sau sản phẩm hạt macca sấy khô của Rio Macca Lâm Hà, Lâm Đồng.',
